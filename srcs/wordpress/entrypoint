#!/bin/ash

cd /var/www/html

wp core download --allow-root

wp config create \
	--dbname=${DB_NAME} \
	--dbuser=root \
	--dbpass=${ADMIN_PASS} \
	--dbhost=mariadb \
	--allow-root

wp core install \
	--url=https://brda-sil.42.fr \
	--title="Mine Site" \
	--admin_user=${ADMIN_USER} \
	--admin_password=${ADMIN_PASS} \
	--admin_email="pix@nowhere.com" \
	--allow-root

wp user create ${NORMAL_USER} \
	brda-sil@nowhere.com \
	--user_pass=${NORMAL_PASS} \
	--role=subscriber \
	--allow-root

# php -F -R
while [ 1 ]; do
	sleep 5
done
