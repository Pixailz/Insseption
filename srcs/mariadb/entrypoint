#!/bin/ash

MYSQL_OPT="--user=mysql --verbose=0 --skip-name-resolve --skip-networking=0"

if [ ! -d /run/mysqld ]; then
	mkdir -p /run/mysqld
fi

chown -R mysql:mysql /run/mysqld

if [ ! -d /var/lib/mysql/mysql ]; then
	chown -R mysql:mysql /var/lib/mysql

	mysql_install_db --user="mysql" --ldata=/var/lib/mysql >/dev/null

	tmp_file=$(mktemp)

	cat << EOSQL > ${tmp_file}
CREATE DATABASE IF NOT EXISTS \`${DB_NAME}\` CHARACTER SET utf8 COLLATE utf8_general_ci ;
USE ${DB_NAME};
FLUSH PRIVILEGES ;
GRANT ALL ON ${DB_NAME}.* TO 'root'@'%' identified by '${ADMIN_PASS}' WITH GRANT OPTION ;
SET PASSWORD FOR 'root'@'%'=PASSWORD('${ADMIN_PASS}') ;
DROP DATABASE IF EXISTS test ;
FLUSH PRIVILEGES ;
EOSQL

	/usr/bin/mysqld --bootstrap ${MYSQL_OPT} < ${tmp_file}
	rm ${tmp_file}
fi

exec /usr/bin/mysqld --console ${MYSQL_OPT}

